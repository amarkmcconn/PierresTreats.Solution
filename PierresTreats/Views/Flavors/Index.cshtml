@using PierresTreats.Models;
@* @model IEnumerable<PierresTreats.Models.Flavor> *@

<div class="container">
  <h3><a href="https://fontmeme.com/fonts/bayern-font/"><img src="https://fontmeme.com/permalink/220603/882ba827b1522beb8e56aaf8c5d5f4e1.png" alt="bayern-font" border="0"></a>for @User.Identity.Name</h3>
  <img id="centeredImage" src=img/flavor.gif>
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId }, new {@class = "myCssClass"})</li>
      }
    </ul>
  } 
  else
  {
    <h3>No Flavors have been added yet!</h3>
  }
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new Flavor", "Create", null, null, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Add new Treat", "Create", "Treats", null, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Home", "Index", "Home", null, new {@class = "myCssClass"})</td>
    </tr>
  </table>
</div>