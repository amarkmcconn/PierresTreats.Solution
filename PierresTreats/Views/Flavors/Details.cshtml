@model PierresTreats.Models.Flavor;

<div class="container">
  <h2>🍬💊🧁<a href="https://fontmeme.com/arcane-tv-series-font/"><img src="https://fontmeme.com/permalink/220603/f04c133b9a68db6398061a9c570d1943.png" alt="arcane-tv-series-font" border="0"></a>🍬💊🧁</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This Flavor does not contain any Treats</p>
  }
  else
  {
    <h4>Treats the Flavor contains:</h4>
    <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Treat.Name</li>
      @using (Html.BeginForm("DeleteTreat", "Flavors"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete" class="btn btn-danger"/>
      }
    }
    </ul>
  }

  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId }, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Back to Flavors", "Index", null, null, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId }, new {@class = "myCssClass"})</td>
    </tr>
  </table>
</div>
