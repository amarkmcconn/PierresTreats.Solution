@using PierresTreats.ViewModels

@model LoginViewModel


<div class="container">
  <h2>Log in with your account</h2>
  <hr />
  <div id="table">
    @using (Html.BeginForm())
    {
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)<br>

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)<br>

        <br><input type="submit" value="Log in" class="btn btn-success" />
    }
  </div>
  <p>@Html.ActionLink("Home", "Index", "Home", null, new {@class = "myCssClass"})</p>
</div>