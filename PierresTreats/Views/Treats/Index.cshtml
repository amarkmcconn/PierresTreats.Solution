@using PierresTreats.Models;

<div class="container">
  <img id="centeredImage" src=img/treat1.gif>
  <h1><a href="https://fontmeme.com/fonts/bayern-font/"><img src="https://fontmeme.com/permalink/220603/e766be1ee058e01d2311588bf61cb4f8.png" alt="bayern-font" border="0"></a></h1>

  @if (@Model.Count == 0)
  {
    <h3>No Treats have been added yet!</h3>
  } 

  <ul>
    @foreach(Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }, new {@class = "myCssClass"})</li>
    }
  </ul>
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new treats", "Create", null, null,  new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Home", "Index", "Home", null,  new {@class = "myCssClass"})</td>
    </tr>
  </table>
</div>