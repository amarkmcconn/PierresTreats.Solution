@model PierresTreats.Models.Treat;

<div class="container">
  <h2>Treat Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This Treat does not contain any Flavors</p>
  }
  else
  {
    <h4>Flavors the Treat contains:</h4>
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <li>@join.Flavor.Name</li>
        @using (Html.BeginForm("DeleteFlavor", "Treats"))
        {
          @Html.Hidden("joinId", @join.FlavorTreatId)
          <input type="submit" value="Delete" class="btn btn-danger"/>
        }
      }
    </ul>
  }

  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add a Flavor", "AddFlavor", new {id = Model.TreatId}, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Back to Treats", "Index", null, null, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Edit Treat", "Edit", new {id = Model.TreatId }, new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Delete Treat", "Delete", new {id = Model.TreatId }, new {@class = "myCssClass"})</td>
    </tr>
  </table>
</div>